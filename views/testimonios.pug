extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5= pagina 

        //- p= JSON.stringify(testimonios) probamos poniendo esto a ver si se muestra bien en la pag 
        
        bloquote.text-center Lee sobre nuestros clientes y sus experiencias
        .row.testimonios
            each item in testimonios
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                                p.mb-0 
                                    | #{item.mensaje}
                                footer.blockquote-footer
                                    | #{item.nombre}

        .row
            .col-md-12
                h2.d-block.w-100.text-center Cuéntanos tu experiencia

                //-iteramos el array de errores para mostrarlos p= JSON.stringify(errores)
                if(errores) 
                    each item in errores
                        .alert.col.alert-danger.text-center= item.mensaje
            

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimonios" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            //- el name es el que nos va a permitir recogerl los datos que el usuario intriduzca en el input y guardarlo en al BBDD
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo Electrónico 
                            input#correo(type="email", placeholder="Tu email", name="correo", class="form-control", value= correo)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", cols="30", rows="3", placeholder="Tu mensaje", class="form-control")= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")